{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "rootDir": "src"
  },
  "exclude": [
    "lib",
    "node_modules"
  ],
  "include": [
    "src"
  ]
}
